{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits",
    ":dependencyDashboard",
    "group:allNonMajor"
  ],
  "timezone": "America/New_York",
  "rangeStrategy": "bump",
  "rebaseWhen": "behind-base-branch",
  "minimumReleaseAge": "3 days",
  "schedule": ["before 6am on monday"],
  "prConcurrentLimit": 5,
  "prHourlyLimit": 2,
  "ignoreUnstable": true,
  "rollbackPrs": true,
  "lockFileMaintenance": {"enabled": true, "automerge": true},
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["dependencies", "security"],
    "prCreation": "immediate"
  },
  "ignoreDeps": ["node"],
  "packageRules": [
    {
      "matchPackageNames": ["pnpm"],
      "matchManagers": ["npm", "github-actions", "custom.regex"],
      "groupName": "pnpm version (everywhere)",
      "labels": ["dependencies", "renovate", "pnpm"],
      "automerge": false,
      "rangeStrategy": "replace"
    },
    {"matchPackageNames": ["node"], "enabled": false},
    {
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["patch", "minor"],
      "matchPackageNames": ["!pnpm"],
      "automerge": true
    },
    {
      "matchUpdateTypes": ["major"],
      "minimumReleaseAge": "7 days",
      "automerge": false
    },
    {"matchPackagePatterns": ["^@types/"], "minimumReleaseAge": "24 hours"},
    {
      "matchPackageNames": ["@types/node"],
      "matchUpdateTypes": ["patch", "minor"],
      "automerge": true
    },
    {
      "matchPackageNames": ["@types/node"],
      "matchUpdateTypes": ["major"],
      "enabled": false
    },
    {
      "matchManagers": ["github-actions"],
      "matchUpdateTypes": ["patch", "minor"],
      "groupName": "github-actions (non-major)",
      "matchPackageNames": ["!pnpm"],
      "automerge": true,
      "automergeType": "pr",
      "ignoreTests": true
    },
    {
      "matchManagers": ["github-actions"],
      "matchUpdateTypes": ["major"],
      "groupName": "github-actions (major)",
      "matchPackageNames": ["!pnpm"],
      "automerge": false
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["/^\\.github/workflows/.*\\.ya?ml$/"],
      "matchStrings": ["version:\\s*(?<currentValue>[\\d\\.]+)"],
      "depNameTemplate": "pnpm",
      "datasourceTemplate": "npm",
      "versioningTemplate": "semver"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["/^wrangler\\.toml$/"],
      "matchStrings": [
        "PNPM_VERSION\\s*=\\s*\"(?<currentValue>\\d+\\.\\d+\\.\\d+)\""
      ],
      "depNameTemplate": "pnpm",
      "datasourceTemplate": "npm",
      "versioningTemplate": "semver"
    }
  ],
  "labels": ["dependencies", "renovate"],
  "semanticCommitType": "chore",
  "semanticCommitScope": "deps"
}
